        /* --- TABLE STYLES --- */
        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin-top: 20px;
            border: 1px solid var(--bg-tertiary);
            border-radius: var(--border-radius-md);
            overflow: hidden; /* For border-radius on table */
            box-shadow: var(--shadow-sm);
        }
        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid var(--bg-tertiary);
        }
        th {
            background-color: var(--bg-tertiary);
            color: var(--accent-primary);
            font-family: var(--font-display);
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        tbody tr:hover { background-color: rgba(42, 38, 95, 0.5); /* var(--bg-tertiary) with alpha */ }
        tbody tr:last-child td { border-bottom: none; }
        td img { max-width: 60px; height: auto; border-radius: var(--border-radius-sm); }
        table .action-button-sm {
            padding: 6px 12px;
            font-size: 0.85em;
            border-radius: var(--border-radius-sm);
            margin-right: 5px;
            color: white;
            border: none;
            cursor: pointer;
            transition: var(--transition-speed);
        }
        .approve-btn { background-color: var(--accent-success); }
        .approve-btn:hover { background-color: darken(var(--accent-success), 10%); }
        .reject-btn, .ban-btn { background-color: var(--accent-error); }
        .reject-btn:hover, .ban-btn:hover { background-color: darken(var(--accent-error), 10%); }
        .unban-btn { background-color: var(--accent-primary); color: var(--bg-primary); }
        .unban-btn:hover { background-color: darken(var(--accent-primary), 10%); }

        /* --- FOOTER STYLES --- */
        .site-footer {
            background: linear-gradient(90deg, var(--bg-tertiary), var(--bg-secondary));
            color: var(--text-secondary);
            text-align: center;
            padding: 25px 0;
            margin-top: 40px;
            border-top: 2px solid var(--accent-primary);
            font-size: 0.9em;
        }
        .site-footer p { margin: 0; color: var(--text-secondary); }
        .site-footer a { color: var(--accent-primary); }
        .site-footer a:hover { color: var(--accent-secondary); }
        
        /* --- RESPONSIVE STYLES --- */
        @media (max-width: 1024px) {
            .main-navigation { display: none; order: 3; width: 100%; background-color: var(--bg-secondary); position: absolute; top: var(--header-height); left:0; box-shadow: 0 5px 10px rgba(0,0,0,0.3); padding-bottom: 10px;}
            .main-navigation.open { display: block; animation: slideDownMenu 0.4s forwards; }
            @keyframes slideDownMenu { from { opacity: 0; transform: translateY(-20px); } to { opacity: 1; transform: translateY(0); }}
            .main-navigation ul { flex-direction: column; width: 100%; }
            .main-navigation ul li { margin-left: 0; text-align: center; border-bottom: 1px solid var(--bg-tertiary); }
            .main-navigation ul li:last-child { border-bottom: none; }
            .main-navigation ul li a { padding: 15px; display: block; }
            .main-navigation ul li a::after { display: none; } /* Hide underline effect on mobile nav */
            .mobile-menu-toggle { display: block; order: 2; }
            .user-actions-area { order: 1; }
            .search-bar-area { display: none; /* Or make it smaller / part of mobile menu */ }
            .header-container { width: 95%; }
            h1 {font-size: 2em;}
        }

        @media (max-width: 768px) {
            .product-grid { grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); }
            .user-actions-area .action-button { padding: 8px 12px; font-size: 0.8em; }
            .user-actions-area .action-button i { margin-right: 5px; }
            .dropdown-toggle.user-greeting-button { padding: 6px 10px; }
            .logo-area .site-name { font-size: 1.5em; }
            .logo-area .logo-icon { font-size: 1.8em; }
            .container { width: 95%; padding: 15px; }
        }

        @media (max-width: 480px) {
            .logo-area .site-name { display: none; } /* Only icon for very small screens */
            .user-actions-area .login-button, .user-actions-area .register-button { font-size: 0; /* Hide text, only icon */ padding: 8px; }
            .user-actions-area .login-button i, .user-actions-area .register-button i { margin-right: 0; }
            .dropdown-toggle .user-icon { margin-right: 0; }
            .dropdown-toggle span:not(.user-icon):not(.fa-caret-down) { display:none; } /* Hide username on small screens in dropdown toggle */
            .product-grid { grid-template-columns: 1fr; /* Single column */ }
        }

        /* UTILITY CLASSES */
        .text-center { text-align: center; }
        .mt-1 { margin-top: 1rem; }
        .mt-2 { margin-top: 2rem; }
        .mb-1 { margin-bottom: 1rem; }
        .mb-2 { margin-bottom: 2rem; }
        .button-group { display: flex; gap: 10px; justify-content: center; margin-top: 1.5rem;}
    </style>
</head>
<body>
    <header class="site-header">
        <div class="header-container">
            <div class="logo-area">
                <a href="/" class="logo-link">
                    <i class="fas fa-meteor logo-icon"></i>
                    <span class="site-name">E-COMMERCE WANZOFC-TECH</span>
                </a>
            </div>

            <nav class="main-navigation">
                <ul>
                    <li><a href="/"><i class="fas fa-home nav-icon"></i>Home</a></li>
                    <li><a href="/products"><i class="fas fa-rocket nav-icon"></i>Products</a></li>
                    <% if (currentUser && (currentUser.role === 'seller' || currentUser.role === 'admin')) { %>
                        <li><a href="/products/new"><i class="fas fa-plus-circle nav-icon"></i>Add Product</a></li>
                    <% } %>
                </ul>
            </nav>
            
            <div class="search-bar-area">
                <form action="/products/search" method="GET" class="search-form">
                    <input type="text" name="q" placeholder="Search the cosmos..." class="search-input">
                    <button type="submit" class="search-button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="user-actions-area">
                <% if (currentUser) { %>
                    <div class="dropdown">
                        <button class="dropdown-toggle user-greeting-button">
                            <i class="fas fa-user-astronaut user-icon"></i> <span><%= currentUser.username %></span> <i class="fas fa-caret-down"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <% if (currentUser.role === 'admin') { %>
                                <li><a href="/admin/dashboard"><i class="fas fa-user-shield dropdown-icon"></i> Admin Panel</a></li>
                            <% } %>
                            <% if (currentUser.role === 'seller' || currentUser.role === 'admin') { %>
                                <li><a href="/user/dashboard"><i class="fas fa-tachometer-alt-fast dropdown-icon"></i> Seller Hub</a></li>
                                <li><a href="/user/my-products"><i class="fas fa-cubes dropdown-icon"></i> My Listings</a></li>
                            <% } %>
                             <li><a href="/user/profile"><i class="fas fa-user-astronaut dropdown-icon"></i> My Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a href="/auth/logout"><i class="fas fa-sign-out-alt dropdown-icon"></i> Logout</a></li>
                        </ul>
                    </div>
                <% } else { %>
                    <a href="/auth/login" class="action-button login-button"><i class="fas fa-sign-in-alt"></i> Login</a>
                    <a href="/auth/register" class="action-button register-button"><i class="fas fa-user-plus"></i> Register</a>
                <% } %>
            </div>
            <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </header>

    <main class="site-content">
        <div class="container">
            <% if (locals.message && (typeof message === 'string' || message.text)) { %>
                <div class="message-banner <%= message.type || 'info' %>">
                    <%= typeof message === 'string' ? message : message.text %>
                </div>
            <% } %>
            <%- body %>
        </div>
    </main>

    <footer class="site-footer">
        <p>© <%= new Date().getFullYear() %>  e-commerce - wanzofc-tech.</p>
        <p>Powered by <a href="https://api-only-awan.biz.id" target="_blank" rel="noopener noreferrer">MY API</a> & <a href="https://wa.me/62895402567224" target="_blank" rel="noopener noreferrer">my contacts</a></p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const dropdownToggle = document.querySelector('.dropdown-toggle');
            const dropdownMenu = document.querySelector('.dropdown-menu');
            if (dropdownToggle && dropdownMenu) {
                dropdownToggle.addEventListener('click', function(event) {
                    event.stopPropagation();
                    dropdownMenu.classList.toggle('show');
                });
                window.addEventListener('click', function(event) {
                    if (dropdownMenu.classList.contains('show') && !dropdownToggle.contains(event.target) && !dropdownMenu.contains(event.target)) {
                        dropdownMenu.classList.remove('show');
                    }
                });
            }

            const mobileMenuButton = document.querySelector('.mobile-menu-toggle');
            const mainNavigation = document.querySelector('.main-navigation');
            if (mobileMenuButton && mainNavigation) {
                mobileMenuButton.addEventListener('click', function() {
                    mainNavigation.classList.toggle('open');
                    const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true' || false;
                    mobileMenuButton.setAttribute('aria-expanded', !isExpanded);
                    const icon = mobileMenuButton.querySelector('i');
                    if (mainNavigation.classList.contains('open')) {
                        icon.classList.remove('fa-bars');
                        icon.classList.add('fa-times');
                    } else {
                        icon.classList.remove('fa-times');
                        icon.classList.add('fa-bars');
                    }
                });
            }

            // Dynamic active class for navigation (simple example based on current path)
            const navLinks = document.querySelectorAll('.main-navigation a');
            const currentPath = window.location.pathname;
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath || (currentPath === '/' && link.getAttribute('href') === '/')) {
                    link.classList.add('active');
                }
                // More complex logic for /products/new or /products/:id to highlight /products
                if (currentPath.startsWith('/products') && link.getAttribute('href') === '/products') {
                     link.classList.add('active');
                }
            });

            // Form 'role' selection toggles WhatsApp field
            const roleSelect = document.getElementById('role');
            if (roleSelect) {
                const toggleWhatsAppField = (role) => {
                    const whatsappField = document.getElementById('whatsappField');
                    if (!whatsappField) return;
                    if (role === 'seller') {
                        whatsappField.style.display = 'block';
                        const whatsappInput = document.getElementById('whatsappNumber');
                        if(whatsappInput) whatsappInput.required = true;
                    } else {
                        whatsappField.style.display = 'none';
                        const whatsappInput = document.getElementById('whatsappNumber');
                        if(whatsappInput) whatsappInput.required = false;
                    }
                };
                roleSelect.addEventListener('change', (e) => toggleWhatsAppField(e.target.value));
                toggleWhatsAppField(roleSelect.value); // Initialize on page load
            }
        });
    </script>
</body>
</html>