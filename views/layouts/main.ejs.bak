/* --- USER PROFILE PAGE STYLES --- */
.profile-layout {
    display: flex;
    gap: 30px;
    margin-top: 2rem;
    background-color: var(--bg-secondary); /* Latar belakang untuk seluruh area profil */
    padding: 25px;
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-md);
}

.profile-sidebar {
    flex: 0 0 280px; /* Lebar tetap untuk sidebar */
    padding-right: 25px;
    border-right: 1px solid var(--bg-tertiary);
}

.profile-avatar-section {
    margin-bottom: 2rem;
}

.profile-avatar-main {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--accent-primary);
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
    margin-bottom: 1rem;
}
.avatar-upload-label {
    display: inline-block; /* Agar bisa diatur padding & margin */
    cursor: pointer;
    padding: 8px 15px !important; /* Override general form-button padding jika perlu */
    font-size: 0.9em !important;
}


.profile-nav {
    list-style: none;
    padding: 0;
    margin: 0;
}

.profile-nav li {
    margin-bottom: 10px;
}

.profile-nav-link {
    display: flex;
    align-items: center;
    padding: 12px 15px;
    text-decoration: none;
    color: var(--text-secondary);
    border-radius: var(--border-radius-sm);
    transition: var(--transition-speed);
    font-weight: 500;
}
.profile-nav-link i {
    margin-right: 12px;
    width: 20px; /* Lebar tetap untuk ikon agar teks sejajar */
    text-align: center;
    color: var(--accent-primary);
}

.profile-nav-link:hover,
.profile-nav-link.active {
    background-color: var(--bg-tertiary);
    color: var(--accent-primary);
    box-shadow: inset 0 0 8px rgba(0, 255, 255, 0.1);
}
.profile-nav-link.active i {
    transform: scale(1.1); /* Sedikit efek pada ikon aktif */
}

.profile-content {
    flex: 1;
}

.profile-tab-content {
    display: none; /* Sembunyikan semua tab secara default */
    animation: fadeInTab 0.5s forwards;
}
.profile-tab-content.active {
    display: block; /* Tampilkan tab yang aktif */
}
@keyframes fadeInTab {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

.profile-content h2 {
    font-family: var(--font-display);
    color: var(--accent-secondary); /* Warna berbeda untuk judul tab */
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--bg-tertiary);
    font-size: 1.8em;
}
.profile-content form {
    max-width: 600px; /* Batasi lebar form di dalam tab */
}


/* Responsive untuk Profile Page */
@media (max-width: 992px) {
    .profile-layout {
        flex-direction: column;
    }
    .profile-sidebar {
        flex: 0 0 auto; /* Lebar otomatis menyesuaikan konten */
        width: 100%;
        border-right: none;
        border-bottom: 1px solid var(--bg-tertiary);
        padding-right: 0;
        padding-bottom: 20px;
        margin-bottom: 20px;
    }
    .profile-avatar-main {
        width: 150px;
        height: 150px;
    }
    .profile-nav {
        display: flex;
        overflow-x: auto; /* Navigasi jadi horizontal scrollable */
        padding-bottom: 10px; /* Ruang untuk scrollbar */
    }
    .profile-nav li {
        margin-bottom: 0;
        margin-right: 10px;
        white-space: nowrap; /* Mencegah teks wrap di tombol nav */
    }
}
@media (max-width: 768px) {
    .profile-content form {
        max-width: 100%;
    }
