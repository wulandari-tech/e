<h1>welcome to e-commerce wanzofc tech</h1>
<p class="text-center mb-2" style="font-size: 1.1em; color: var(--text-secondary);">menyediakan barang barang yang anda butuhkan.</p>

<% if (products && products.length > 0) { %>
    <div class="product-grid mt-2">
        <% products.forEach(product => { %>
            <div class="product-card">
                <div class="product-card-image-wrapper">
                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                </div>
                <div class="product-card-content">
                    <h3><a href="/products/<%= product._id %>"><%= product.name %></a></h3>
                    <p class="price">$<%= product.price.toFixed(2) %></p>
                    <p class="category"><i class="fas fa-tag"></i> <%= product.category || 'Uncategorized' %></p>
                    <p class="seller"><i class="fas fa-user-astronaut"></i> Sold by: <%= product.seller ? product.seller.username : 'System' %></p>
                    <div class="actions">
                        <a href="/products/<%= product._id %>" class="view-button"><i class="fas fa-eye"></i> View Item</a>
                        <% if (product.seller && product.seller.whatsappNumber) { %>
                            <% const waMessage = encodeURIComponent(`Greetings ${product.seller.username}, I'm interested in your cosmic item: "${product.name}" from StellarMarket.`); %>
                            <% const whatsappLink = `https://wa.me/${product.seller.whatsappNumber}?text=${waMessage}`; %>
                            <a href="<%= whatsappLink %>" target="_blank" class="whatsapp-button"><i class="fab fa-whatsapp"></i> Contact Seller</a>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <p class="text-center mt-2" style="font-size: 1.2em;">The marketplace is currently quiet... No products found. Check back soon!</p>
<% } %>